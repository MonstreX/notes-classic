{
  "$schema": "https://schema.tauri.app/config/2.9.5",
  "productName": "notes-classic",
  "version": "0.1.0",
  "identifier": "com.notes-classic.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": false,
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": {
          "allow": [
            "**"
          ]
        }
      },
      "capabilities": [
        {
          "identifier": "main",
          "description": "Main window capabilities",
          "windows": ["main"],
          "permissions": [
            "core:default",
            "core:event:default",
            "dialog:default",
            "shell:default",
            "clipboard-manager:allow-write-text",
            "window-state:default"
          ]
        }
      ]
    },
    "windows": [
      {
        "label": "main",
        "fullscreen": false,
        "resizable": true,
        "title": "Notes Classic",
        "backgroundColor": "#ffffff",
        "width": 1000,
        "height": 700,
        "minWidth": 800,
        "minHeight": 600,
        "dragDropEnabled": false
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": ["icons/app.ico"],
    "resources": [
      "resources/ocr/tessdata/eng.traineddata.gz",
      "resources/ocr/tessdata/rus.traineddata.gz"
    ]
  },
  "plugins": {}
}
